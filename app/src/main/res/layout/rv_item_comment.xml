<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/ll_rv_item_comment_container">
        <ImageView
                android:layout_width="90dp"
                android:layout_margin="5dp"
                android:layout_height="70dp"
                android:id="@+id/img_rv_item_comment_thumbnail"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1" android:gravity="center_vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="author"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_rv_item_comment_author" android:textSize="16dp"
                        android:textStyle="bold" android:textColor="#484848"/>
                <TextView
                        android:text="1999.01.01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/txt_rv_item_comment_date" android:textSize="12dp" android:textColor="#CECECE"/>
            </LinearLayout>
            <TextView
                    android:text="description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/txt_rv_item_comment_comment"
                    android:textColor="#484848"
                    android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>