<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:dividerPadding="1dp">
    <RelativeLayout
        android:id="@+id/rl_nav_category_main_all"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="인기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_nav_category_main_new"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="신작"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_nav_category_main_end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:text="완결"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>